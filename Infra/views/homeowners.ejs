<% include header.ejs %>
<div class="animated fadeIn">
	<div class="row">
		<div class="col-lg-4">
			<a class="btn btn-dark" href="/homeowners/add">Add Homeowner</a>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<strong class="card-title">Homeowners</strong>
				</div>
				<div class="card-body">
					<table id="homeowners_table" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Plate Number</th>
								<th>Name</th>
								<th>Address</th>
								<th>Contact Number</th>
								<th>Conduction Number</th>
								<th>Vehicle Type</th>
								<th>Vehicle Model</th>
								<th>Date Registered</th>
							</tr>
						</thead>
						<tbody>
							<% homeowners.forEach((homeowner) => { %>
							<tr>
								<td><%= homeowner.plate_number %></td>
								<td><%= homeowner.name %></td>
								<td><%= homeowner.address %></td>
								<td><%= homeowner.contact_number %></td>
								<td><%= homeowner.conduction_number %></td>
								<td><%= homeowner.vehicle_type %></td>
								<td><%= homeowner.model %></td>
								<td><%= homeowner.date_registered %></td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div><!-- .animated -->
<% include footer.ejs %>
<script>
	$ = jQuery.noConflict();
$('#homeowners_table').DataTable();
</script>
