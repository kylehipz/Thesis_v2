<% include header.ejs %>
<div class="animated fadeIn">
	<%= messages.error %>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<strong class="card-title">Logs</strong>
				</div>
				<div class="card-body">
					<table id="logs_table" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Log ID</th>
								<th>Plate Number</th>
								<th>Visitor</th>
								<th>Owner</th>
								<th>Status</th>
								<th>Date Recorded</th>
							</tr>
						</thead>
						<tbody id="logs_body">
							<% logs.forEach((log) => { %>
							<tr>
								<td><a href="/logs/<%= log.image_path %>"><%= log._id %></a></td>
								<td><%= log.plate_number %></td>
								<td><%= log.owner == "Unknown" ? "Yes" : "No" %></td>
								<td><%= log.owner %></td>
								<td><%= log.entrance ? "Yes" : "No" %></td>
								<td><%= log.date_recorded %></td>
							</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<!--<button id="hidden_button" type="button" hidden="hidden"></button>-->
</div><!-- .animated -->
<% include footer.ejs %>
<script>
	$ = jQuery.noConflict();
$('#logs_table').DataTable({
	"order": [[5, "desc"]],
	aLengthMenu: [
		[10, 25, 50, 100, -1],
		[10, 25, 50, 100, "All"]
	]
});
</script>

