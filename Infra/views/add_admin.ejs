<% include header2.ejs %>
<div class="col-lg-2"></div>
<div class="col-lg-8">
	<div class="card text-center">
		<div class="card-header">
			<strong>Add Administrator</strong> 
		</div>
		<div class="card-body card-block">
			<form action="/admins/add" method="post" class="form-horizontal">
				<div class="row form-group">
					<div class="col col-md-12">
						<div class="input-group">
							<div class="input-group-addon"><i class="fa fa-user"></i></div>
							<input type="text" id="name" name="name" placeholder="Full name" class="form-control" required>
						</div>
					</div>
				</div>
				<div class="row form-group">
					<div class="col col-md-12">
						<div class="input-group">
							<div class="input-group-addon"><i class="fa fa-user"></i></div>
							<input type="text" id="username" name="username" placeholder="Username" class="form-control" required>
						</div>
					</div>
				</div>
				<div class="row form-group">
					<div class="col col-md-12">
						<div class="input-group">
							<div class="input-group-addon"><i class="fa fa-lock"></i></div>
							<input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
						</div>
					</div>
				</div>
				<div class="row form-group">
					<div class="col col-md-12">
						<div class="input-group">
							<div class="input-group-addon"><i class="fa fa-lock"></i></div>
							<input type="password" id="confirm" name="confirm" placeholder="Repeat Password" class="form-control" required>
						</div>
					</div>
				</div>
				<div class="row form-group">
					<div class="col col-md-3">
						<div class="input-group">
							<button class="btn btn-dark">Submit</button>
						</div>
					</div>
				</div>
		</div>
			</form>
	</div>
	<% include footer2.ejs %>
